<nav>
    <a href="/">Return Home</a>
</nav>
<form>
    <div class="form-group">
        <h1 id="runTitle">YOU RAN!</h1>
        <h2>Please Enter Running Time</h2>
        <label for="hours">Enter hours:</label>
            <input class="form-control" type="number" id="hours" name="hours" min="0" max="1000">
        <label for="minutes">Enter minutes:</label>
            <input class="form-control" type="number" id="minutes" name="minutes" min="0" max="1000">
        <label for="seconds">Enter seconds:</label>
            <input class="form-control" type="number" id="seconds" name="seconds" min="0" max="1000">
        <h2>Please Enter Distance you Ran</h2>
        <label for="distance">Enter distance:</label>
            <input class="form-control" type="number" id="distance" name="distance" step="0.1" min="0" max="1000000">
            <small id="distanceHelp" class="form-text text-muted">In meters...</small>
        <button type="button" class="btn btn-primary submit" id="submitRun">Submit Run</button>

    </div>
</form>

<table class="table table-dark" id="runTable">
  <thead>
    <tr>
      <th scope="col">No.</th>
      <th scope="col">Running Time</th>
      <th scope="col">Distance</th>
      <th scope="col">Run Date</th>
    </tr>
  </thead>
  <tbody>
      {{#each runs}}
    <tr>
      <th scope="row">{{@index}}</th>
      <td>{{this.time}}</td>
      <td>{{this.distance}}</td>
      <td>{{this.created}}</td>
    </tr>
     {{/each}}
  </tbody>
</table>

<script src="./js/app.js" type="text/javascript"></script>
